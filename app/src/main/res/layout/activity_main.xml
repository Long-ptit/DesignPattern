<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/dp20"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp15"
        android:text="@string/choose_your_hero_type_you_want" />

    <Spinner
        android:id="@+id/sp_hero_ype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/list_type_hero" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp15"
        android:text="@string/choose_your_hero_branch_you_want" />

    <Spinner
        android:id="@+id/sp_hero_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/list_branch_hero" />

    <EditText
        android:id="@+id/edt_name_equipment"
        android:hint="@string/enter_your_name_of_equipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp15"
        android:background="@drawable/bg_edt"
        android:padding="@dimen/dp10" />


    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/send_data" />

</LinearLayout>